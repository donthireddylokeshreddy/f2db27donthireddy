extends layout
block content
  h1= title
  - let results = result;
  div(class="container-fluid mt-3")
  div(class="row m-1")
    each temp,index in results
     - let destination = `dispatch(\"/grocary/update?id=${temp._id}\")`
        div(class="col-sm-2" )  #{temp.tomatovalue} -  #{temp.onionvalue} - #{temp.capsicumvaluve}
          button.btn( class="btn-primary ml-1", onclick= destination) Update
  br
  div(class="container-fluid")
    div(class="row")
    - for(var i=0;i<results.length;i++) {
        div(class="col-sm-2" width="215px" onClick=`buy(${i+1})`) #{results[i].tomatovalue}
    -}
  script. 
    function buy(indexNum) {
      alert(`You purchased item ${indexNum}`);
    }
    function dispatch(path){ 
      window.location.href=path 
    } 